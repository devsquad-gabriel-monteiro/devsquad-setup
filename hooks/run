#!/bin/sh

npm install husky --save-dev
npx husky install
npm pkg set scripts.prepare "husky install"
npm pkg set scripts.postinstall "husky install" # yarn 2 only

echo "1. Install .husk/pre-rebase"
curl -s -o .husk/pre-rebase "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/pre-rebase"
chmod +x .husk/pre-rebase

echo "2. Install .husk/pre-push"
curl -s -o .husk/pre-push "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/pre-push"
chmod +x .husk/pre-push

echo "3. Install .husk/commit-msg"
curl -s -o .husk/commit-msg "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/commit-msg"
chmod +x .husk/commit-msg
